#include "dma_hal.h"
#include "dma_hw.h"

int request_DMA(int tries) {
	int i;

	BUS_REQ_SET;

	i=0;
	do {
		if (i >= tries) {
			BUS_REQ_CLR;
			return -1;
		}

		i++;
	} while (BUS_ACK_GET != 1);


	return 0;
}

